<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageButton
            android:layout_width="255dp"
            android:layout_height="87dp" tools:srcCompat="@tools:sample/avatars[0]"
            android:id="@+id/SignButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="76dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="76dp"
            android:contentDescription="@android:string/cancel"
            android:layout_marginTop="40dp"
            android:scaleType="center" app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.494"/>
    <ImageButton
            android:layout_width="255dp"
            android:layout_height="87dp" tools:srcCompat="@tools:sample/avatars[3]"
            android:id="@+id/EmploeyButton" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/SignButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="76dp" android:layout_marginStart="76dp"
            android:contentDescription="@android:string/cancel" app:layout_constraintHorizontal_bias="0.494"/>
    <ImageView
            android:layout_width="153dp"
            android:layout_height="141dp" tools:srcCompat="@tools:sample/avatars[1]"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/imageView" android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.506"/>

</android.support.constraint.ConstraintLayout>