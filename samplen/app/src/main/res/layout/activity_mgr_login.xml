<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MgrLogin"
        android:foregroundTint="@android:color/transparent">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/Emailtxt"
            app:layout_constraintHorizontal_bias="0.504"
            android:layout_marginTop="76dp" app:layout_constraintTop_toTopOf="@+id/imageView2"
            android:textColor="#E91E63" android:backgroundTint="#00E00D0D"/>
    <EditText
            android:layout_width="221dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/Passtxt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView3" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.257" android:layout_marginTop="8dp" android:textColor="#CDDC39"/>
    <ImageView
            android:layout_width="267dp"
            android:layout_height="144dp"
            android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="48dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <ImageView
            android:layout_width="246dp"
            android:layout_height="142dp"
            android:id="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp"/>
    <ImageButton
            android:layout_width="175dp"
            android:layout_height="66dp"
            android:id="@+id/RequestButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:scaleType="fitXY"
            app:layout_constraintHorizontal_bias="0.503" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"/>
</android.support.constraint.ConstraintLayout>