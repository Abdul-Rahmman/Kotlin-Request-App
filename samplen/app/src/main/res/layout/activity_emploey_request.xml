<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EmploeyRequest"
        android:background="@drawable/bg" android:foregroundTint="@android:color/transparent">
    <ScrollView
            android:layout_width="304dp"
            android:layout_height="517dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:gravity="right">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView6"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView5"/>
            <TextView
                    android:text="أدخل اسمك الكامل"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/Textview"
                    android:gravity="right"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText"/>
            <TextView
                    android:text="أدخل رقم الجوال"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView" android:gravity="right"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/editText2"/>
            <TextView
                    android:text="طلب أجهزة"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView2" android:gravity="right"/>
            <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:gravity="right">
                <RadioButton
                        android:text="كمبيوتر"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/radioButton4" android:layout_weight="1"
                />
                <RadioButton
                        android:text="لاب توب"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/radioButton2" android:layout_weight="1"/>
            </RadioGroup>
            <TextView
                    android:text="طلب تطبيقات"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView3" android:gravity="right"/>
            <CheckBox
                    android:text="سيج"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/checkBox" android:gravity="right"/>
            <CheckBox
                    android:text="ريتيل برو"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/checkBox2" android:gravity="right"/>
            <CheckBox
                    android:text="اوتوكاد"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/checkBox3" android:gravity="right"/>
            <TextView
                    android:text="المدير"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView4"/>
            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/spinner"/>
            <ImageButton
                    android:layout_width="175dp"
                    android:layout_height="66dp" app:srcCompat="@drawable/log" android:id="@+id/send"
                    android:scaleType="fitXY"
                    android:soundEffectsEnabled="true" android:layout_gravity="center"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>